extends base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="name",placeholder="Name", type="text", reqired)
        input(name="email",placeholder="Email", type="email", reqired)
        input(name="username",placeholder="Username", type="text", reqired)
        input(name="password",placeholder="Password", type="password", reqired, minlength=8)
        input(name="password2",placeholder="Confirm Password", type="password", reqired)
        input(name="location",placeholder="Location", type="text", reqired)
        input(type="submit", value="Join")
    hr
    div 
        span Already have an account? 
        a(href="/login") Log in now &rarr;